{
  // Enforcing Options
  "undef": true,          // Prohibit undefined variables
  "eqeqeq": true,         // Require the use of three-equals
  "bitwise": true,        // Prohibit bitwise operators
  "trailing": true,       // Prohibit trailing whitespace

  // Relaxing Options
  "laxcomma": true,       // Allow comma-first style
  "asi": true,            // Allow semi-colon free style
  "eqnull": true,         // Allow use of two-equals for comparison with null
  "expr": true,           // Allow standalone expressions

  // Environment Options
  "node": true,           // Allow browser globals to be used

  // Globals
  "globals": {
    "styleMatch": false,
    "sinon": false,
    "chai": false,
    "sinonChai": false,
    "describe": false,
    "it": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "should": false,
    "expect": false,
    "_": false,
    "mute": false,
    "unmute": false,
    "run_cmd": false
  }
}
// vim: filetype=javascript
